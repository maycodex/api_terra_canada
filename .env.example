# ============================================
# SERVIDOR
# ============================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ============================================
# BASE DE DATOS (PostgreSQL Local)
# ============================================
# IMPORTANTE: Asegúrate de tener PostgreSQL instalado localmente
# Ajusta el usuario, password y nombre de base de datos según tu configuración
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/terra_canada_v2

# ============================================
# JWT
# ============================================
JWT_SECRET=cambiar_este_secreto_super_seguro_en_produccion_min_32_caracteres
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# N8N WEBHOOKS
# ============================================
N8N_BASE_URL=https://n8n.salazargroup.cloud
N8N_WEBHOOK_DOCUMENTO=/webhook/procesar-documento
N8N_WEBHOOK_CORREO=/webhook/enviar-gmail
N8N_AUTH_TOKEN=

# ============================================
# UPLOAD DE ARCHIVOS
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=application/pdf

# ============================================
# STORAGE (Opcional - para cloud)
# ============================================
STORAGE_TYPE=local
# Si es S3:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_REGION=

# ============================================
# CORREO (Backup - si N8N falla)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@terracanada.com
SMTP_PASS=

# ============================================
# LOGS
# ============================================
LOG_LEVEL=info
LOG_DIR=./logs

# ============================================
# SEGURIDAD
# ============================================
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:5173
