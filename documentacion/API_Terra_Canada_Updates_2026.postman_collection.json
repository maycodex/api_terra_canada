                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"pdf\": \"JVBERi0xLjQKJeLjz9MKMSAwIG9iag...\",\n  \"usuario_id\": 2\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/pagos/subir-extracto-banco",
                            "host": ["{{base_url}}"],
                            "path": ["pagos", "subir-extracto-banco"]
                        },
                        "description": "Subir extracto bancario a N8N. Webhook: https://n8n.salazargroup.cloud/webhook/docu"
                    }
